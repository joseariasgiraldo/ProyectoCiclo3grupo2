@page
@model ProyectoCiclo3.App.Frontend.Pages.ListAeropuertosModel
@{
}
 
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Nombre</th>
      <th scope="col">Ciudad</th>
      <th scope="col">Pais</th>
      <th scope="col">Coord X</th>
      <th scope="col">Coord Y</th>
      <th scope="col">Acciones</th>
    </tr>
  </thead>
  <tbody>
   @foreach (var aeropuerto in Model.Aeropuertos)
    {
        <tr>
            <td>@aeropuerto.id</td>
            <td>@aeropuerto.nombre</td>
            <td>@aeropuerto.ciudad</td>
            <td>@aeropuerto.pais</td>
            <td>@aeropuerto.coord_x</td>
            <td>@aeropuerto.coord_y</td>
            <td>
              <a class="btn btn-info" asp-page="./Details" asp-route-aeropuertoId="@aeropuerto.id"><i class="fas fa-adjust"></i>Ver</a>
              <a class="btn btn-info" asp-page="./Edit" asp-route-aeropuertoId="@aeropuerto.id">Editar</a>
              <a class="btn btn-danger" href="">Eliminar</a>
            </td>
        </tr>
    }
  </tbody>
</table>