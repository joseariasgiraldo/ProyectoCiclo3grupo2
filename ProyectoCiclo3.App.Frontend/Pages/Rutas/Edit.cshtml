@page
@model ProyectoCiclo3.App.Frontend.Pages.EditRutaModel
@{
    var ruta = Model.Ruta;
}

<div class="text-center">
    <form method = "POST">
        <input type="text" class="form-control d-none" id="id" name="id" required placeholder="id" minlength="3" asp-for="@Ruta.id" readonly>

        <label for="origen" class="form-label">Origen:</label>
        <input type="text" class="form-control" id="origen" name="origen" required placeholder="Origen" minlength="3" asp-for="@Ruta.origen">
        
        <label for="destino" class="form-label">Destino:</label>
        <input type="text" class="form-control" id="destino" name="destino" required placeholder="Destino" asp-for="@Ruta.destino">

        <label for="tiempo_estimado" class="form-label">Tiempo estimado:</label>
        <input type="text" class="form-control" id="tiempo_estimado" name="tiempo_estimado" required placeholder="Tiempo estimado" asp-for="@Ruta.tiempo_estimado">

        <button type="submit" class="btn btn-success">Actualizar</button>
    </form>
</div>